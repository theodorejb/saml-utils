{
    "name": "theodorejb/saml-utils",
    "description": "Utilities to streamline Light Saml usage",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "litesaml/lightsaml": "^4.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpunit/phpunit": "^11.5",
        "psalm/plugin-phpunit": "^0.19.5",
        "vimeo/psalm": "^6.10"
    },
    "autoload": {
        "psr-4": {
            "theodorejb\\SamlUtils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "theodorejb\\SamlUtils\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyze": "psalm",
        "cs-fix": "php-cs-fixer fix -v",
        "test": "phpunit tests"
    },
    "authors": [
        {
            "name": "Theodore Brown",
            "email": "theodorejb@outlook.com"
        }
    ]
}
